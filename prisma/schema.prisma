generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password String @default("newPassword")
  roles Role @default(USER)
  createdAt DateTime @default(now())
}

